<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyFriends.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyFriends.App.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MyFriends.App">

    <ShellContent
        Title="FriendListView"
        ContentTemplate="{DataTemplate local:FriendListView}"
        Route="friends" />
    <ShellContent
        Title="FriendDetailView"
        ContentTemplate="{DataTemplate local:FriendDetailView}"
        Route="friends/detail" />
    <ShellContent
        Title="FriendEditView"
        ContentTemplate="{DataTemplate local:FriendEditView}"
        Route="friends/detail/edit" />
    <ShellContent
        Title="FriendNewView"
        ContentTemplate="{DataTemplate local:FriendEditView}"
        Route="friends/new" />

</Shell>
